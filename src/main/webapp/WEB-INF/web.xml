<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee" 
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd" 
         version="4.0">
    
    <servlet>
        <servlet-name>MyFirstServlet</servlet-name>
        <servlet-class>com.mziuri.MyServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SumCalculatorServlet</servlet-name>
        <servlet-class>com.mziuri.SumCalculatorServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>MulCalculatorServlet</servlet-name>
        <servlet-class>com.mziuri.MulCalculatorServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>MyFirstServlet</servlet-name>
        <url-pattern>/hello</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SumCalculatorServlet</servlet-name>
        <url-pattern>/calculator/sum</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>MulCalculatorServlet</servlet-name>
        <url-pattern>/calculator/mul</url-pattern>
    </servlet-mapping>

</web-app>